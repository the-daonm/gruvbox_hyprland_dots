{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionY": "top",
  "layer": "top",
  "notification-2fa-action": false,
  "notification-inline-replies": true,
  "timeout": 5,
  "timeout-low": 3,
  "timeout-critical": 0,
  "control-center-width": 400,
  "notification-window-width": 400,
  "control-center-margin-top": 5,
  "control-center-margin-bottom": 5,
  "control-center-margin-right": 5,
  "transition-time": 500,
  "hide-on-clear": true,
  "widgets": [
    "dnd",
    "mpris",
    "volume",
    "backlight",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 1,
      "text": "Notifications"
    },
    "mpris": {},
    "volume": {
      "label": "󰕾"
    },
    "backlight": {
      "label": "󰃟"
    }
  }
}
